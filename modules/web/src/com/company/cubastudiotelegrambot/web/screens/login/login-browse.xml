<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://loginBrowse.caption"
        focusComponent="loginsTable"
        messagesPack="com.company.cubastudiotelegrambot.web.screens.login">
    <data readOnly="true">
        <collection id="loginsDc"
                    class="com.company.cubastudiotelegrambot.entity.Login">
            <view extends="_local"/>
            <loader id="loginsDl">
                <query>
                    <![CDATA[select e from cubastudiotelegrambot_Login e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="loginsTable"
            spacing="true">
        <filter id="filter"
                applyTo="loginsTable"
                dataLoader="loginsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="loginsTable"
                    width="100%"
                    dataContainer="loginsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="loginName"/>
                <column id="password"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="loginsTable.create"/>
                <button id="editBtn" action="loginsTable.edit"/>
                <button id="removeBtn" action="loginsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
