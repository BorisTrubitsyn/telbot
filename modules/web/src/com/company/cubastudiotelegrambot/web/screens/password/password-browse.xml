<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://passwordBrowse.caption"
        focusComponent="passwordsTable"
        messagesPack="com.company.cubastudiotelegrambot.web.screens.password">
    <data readOnly="true">
        <collection id="passwordsDc"
                    class="com.company.cubastudiotelegrambot.entity.Password">
            <view extends="_local"/>
            <loader id="passwordsDl">
                <query>
                    <![CDATA[select e from cubastudiotelegrambot_Password e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="passwordsTable"
            spacing="true">
        <filter id="filter"
                applyTo="passwordsTable"
                dataLoader="passwordsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="passwordsTable"
                    width="100%"
                    dataContainer="passwordsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="password"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="passwordsTable.create"/>
                <button id="editBtn" action="passwordsTable.edit"/>
                <button id="removeBtn" action="passwordsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
