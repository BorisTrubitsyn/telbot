<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://loginEdit.caption"
        focusComponent="form"
        messagesPack="com.company.cubastudiotelegrambot.web.screens.login">
    <data>
        <instance id="loginDc"
                  class="com.company.cubastudiotelegrambot.entity.Login">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="loginDc">
            <column width="350px">
                <textField id="loginNameField" property="loginName"/>
                <textField id="passwordField" property="password"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
